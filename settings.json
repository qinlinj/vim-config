        //     ],
        //     "after": [
        //       "<leader>",
        //       "<leader>",
        //       "g",
        //       "e",
        //     ]
        // },
        {
            // 光标在function首行, 删除整个function
            "before": ["<Leader>", "d", "f"],
            "after": ["V", "$", "%", "d"]
        },
        {
            // 格式化代码
            "before": ["<Leader>", "f", "d"],
            "commands": ["editor.action.formatDocument"] 
        },
        {
            // 重命名
            "before": ["<Leader>", "r", "n"],
            "commands": ["editor.action.rename"] 
        },
        {
            "before": ["<Leader>", "["],
            "commands": [
              {
                "command": "editor.fold",
              },
              {
                "command": "vim.remap",
                "args": {
                    "after": ["$", "%"]
                }
              }
            ]
        },
        {
            "before": ["<Leader>", "]"],
            "commands": [
              {
                "command": "editor.unfold",
              }
            ]
        }
    ],
    "vim.operatorPendingModeKeyBindings": [
        {
            "before": ["H"],
            "after": ["^"]
        },
        {
            "before": ["L"],
            "after": ["g", "_"]
        },
        {
            "before": ["a", "i"],
            "after": ["a", "I"]
        }
    ],
    "vim.handleKeys": {
        "<C-c>": false
    },
    "liveServer.settings.donotShowInfoMsg": true,
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "vscode-edge-devtools.webhintInstallNotification": true
}